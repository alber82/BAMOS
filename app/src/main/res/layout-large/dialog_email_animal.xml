<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/send_study_layout">
        <include android:id="@+id/fake_action_bar"
            layout="@layout/fake_action_bar_with_backbotton" />

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:weightSum="4">

            <TableRow
                android:layout_marginTop="10dip">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    />
                <TextView
                    android:id="@+id/tvCodigo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/email_animal_tv_nane"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etNombre"
                    android:layout_weight="2.5"
                    android:layout_gravity="center_horizontal"
                    android:hint="@string/email_animal_et_nane" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    />

            </TableRow>
            <TableRow
                android:layout_marginTop="10dip">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/email_animal_tv_email"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_weight="2.5"
                    android:id="@+id/etMail"
                    android:hint="@string/email_animal_et_email" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    />

            </TableRow>
            <TableRow
                android:layout_marginTop="10dip">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    />

                <TextView
                    android:id="@+id/tvSubject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/email_animal_tv_subject"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_weight="2.5"
                    android:id="@+id/etSubject"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    />

            </TableRow>

            <TableRow
                android:layout_marginTop="10dip">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    />

                <TextView
                    android:id="@+id/tvTexto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Texto"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:layout_weight="2.5"
                    android:id="@+id/etTextoMail"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    />

            </TableRow>
        </TableLayout>





    </LinearLayout>

</ScrollView>