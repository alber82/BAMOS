<?xml version="1.0" encoding="utf-8"?>
<TableRow  xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:weightSum="9"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

<TextView
    android:id="@+id/codigoAnimal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="@string/header_code_string"
    android:textSize="12dp" />

<TextView
    android:id="@+id/especie"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:layout_weight="1.9"
    android:text="@string/header_species_string"
    android:textSize="12dp" />
    <TextView
        android:id="@+id/experimento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_weight="2"
        android:text="@string/header_experiment_string"
        android:textSize="12dp" />
    <TextView
        android:id="@+id/fecha_nac"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_weight="1.1"
        android:text="@string/header_birth_string"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/fecha_cir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_weight="1.1"
        android:text="@string/header_surgery_string"
        android:textSize="12dp" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_studies_string"
        android:minWidth="0dp"
        android:width="14dp"
        android:id="@+id/btn_ver_estudios_animal"
        android:layout_weight="1"

        android:textSize="12dp" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_delete_string"
        android:minWidth="0dp"
        android:width="13dp"
        android:id="@+id/btn_eliminar_animal"
        android:layout_weight="0.9"

        android:textSize="12dp" />

</TableRow>