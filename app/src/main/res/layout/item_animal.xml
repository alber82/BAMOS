<?xml version="1.0" encoding="utf-8"?>
<TableRow  xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:weightSum="9"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

<TextView
    android:id="@+id/codigoAnimal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="CODIGO"/>

<TextView
    android:id="@+id/especie"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:text="ESPECIE"/>
    <TextView
        android:id="@+id/cepa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="CEPA"/>
    <TextView
        android:id="@+id/transgenico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TRANSGENICO"/>
    <TextView
        android:id="@+id/fecha_nac"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="FECHA_NAC"/>

    <TextView
        android:id="@+id/fecha_cir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="FECHA_CIR"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estudios"
        android:minWidth="0dp"
        android:width="15dp"
        android:id="@+id/btn_ver_estudios_animal"
        android:layout_weight="1"

        />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:minWidth="0dp"
        android:width="15dp"
        android:id="@+id/btn_eliminar_animal"
        android:layout_weight="1"

 />

</TableRow>